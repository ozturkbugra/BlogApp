@model PostsViewModel

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Popüler Postlar</h1>
            @foreach (var item in Model.Posts)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/img/@item.Image" class="img-fluid rounded" />
                        </div>

                        <div class="col-8">
                            <h5><a href="#" class="btn btn-link fw-bold">@item.Title</a></h5>
                            <p>@item.Content</p>
                            <a href="#" class="bagde bg-danger bg-opacity-10 text-danger mb-2 fw-bold">dfsasdf dsfasfas</a>

                        </div>
                    </div>
                    <hr class="my-3" />
                </div>

            }


            <nav>
                <ul class="pagination">
                    <li class="page-item"> <a class="page-link" href="#">1</a></li>
                    <li class="page-item"> <a class="page-link" href="#">2</a></li>
                    <li class="page-item"> <a class="page-link" href="#">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="car-header">
                <h5 class="cart-title">Tags</h5>
            </div>
            <div class="card-body">
                <ul class="list-inline d-flex flex-wrap gap-2">

                    @foreach (var tag in Model.Tags)
                    {
                        <li class="list-inline-item">
                            <a class="btn btn-outline-secondary btn-sm">@tag.Text</a>

                        </li>
                    }
                   
                </ul>
            </div>
        </div>
       

    </div>

</div>

