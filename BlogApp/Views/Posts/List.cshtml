@model List<Post> 

<div class="row">
    <div class="col-12">
        <h2>Post List</h2>
        <a href="/posts/create" class="btn btn-primary">Post Create</a>
        <hr />

        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th style="width:200px">Image</th>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Aktif Mi?</th>
                    <th style="width:125px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td><img src="/img/@item.Image" class="img-fluid"/></td>
                        <td>@item.PostID</td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/posts/edit/@item.PostID" class="btn btn-sm btn-warning">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
         </table>
    </div>
</div>

